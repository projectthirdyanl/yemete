# Example Kubernetes secrets configuration
# DO NOT commit actual secrets to version control
# Use kubectl create secret or external secret management (e.g., Sealed Secrets, External Secrets Operator)

apiVersion: v1
kind: Secret
metadata:
  name: yametee-secrets
  namespace: yametee-staging
type: Opaque
stringData:
  database-url: "postgresql://user:password@host:5432/database"
  paymongo-secret-key: "sk_test_..."
  paymongo-public-key: "pk_test_..."
  paymongo-webhook-secret: "whsec_..."
  nextauth-secret: "your-nextauth-secret-here"
  admin-jwt-secret: "your-admin-jwt-secret-here"

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: yametee-config
  namespace: yametee-staging
data:
  nextauth-url: "https://yametee-staging.example.com"

---
# GitHub Container Registry pull secret
apiVersion: v1
kind: Secret
metadata:
  name: ghcr-secret
  namespace: yametee-staging
type: kubernetes.io/dockerconfigjson
data:
  .dockerconfigjson: <base64-encoded-docker-config-json>

# To create this secret:
# kubectl create secret docker-registry ghcr-secret \
#   --docker-server=ghcr.io \
#   --docker-username=<github-username> \
#   --docker-password=<github-token> \
#   --namespace=yametee-staging
